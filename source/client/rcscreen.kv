<DynamicButton@Button>:
    font_size: self.height
    texture_size: self.width * 0.9, self.height * 0.9
    on_texture_size:
        self.font_size = self.height
        self.texture_size = self.width * 0.9, self.height * 0.9


<DynamicLabel@Label>:
    font_size: self.height
    texture_size: self.width * 0.9, self.height * 0.9
    on_texture_size:
        self.font_size = self.height
        self.texture_size = self.width * 0.9, self.height * 0.9


WindowManager:
    ServerFinderScreen:
    LoginScreen:
    SignupScreen:
    MainMenuScreen:
    ConnectScreen:
    ControllerScreen:
    ControlledScreen:

<ServerFinderScreen>:
    name: "server finder"
    GridLayout:
        size: self.size
        pos: self.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        DynamicLabel:
            text: "Server IP"

        TextInput:
            id: ip_text_input
            hint_text: "IP"
            text: "127.0.0.1"

        DynamicLabel:
            text: "Server port"

        TextInput:
            id: port_text_input
            hint_text: "Port"
            text: "2125"

        DynamicButton:
            text: "Login"
            on_press:
                root._start_connection_manager(ip_text_input.text, port_text_input.text)

<LoginScreen>:
    username_text_input: username_text_input
    password_text_input: password_text_input
    name: "login"
    GridLayout:
        size: self.size
        pos: self.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        DynamicLabel:
            text: "Username:"

        TextInput:
            id: username_text_input
            hint_text: "username"
            text: "meme"

        DynamicLabel:
            text: "Password:"

        TextInput:
            id: password_text_input
            hint_text: "password"
            text: "meme_is_good"

        DynamicButton:
            text: "Login"
            on_press: root.login()

        DynamicButton:
            text: "Signup"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "signup"


<SignupScreen>:
    signup_button: signup_button
    username_text_input: username_text_input
    password_text_input: password_text_input
    name: "signup"
    GridLayout:
        size: root.size
        pos: root.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        DynamicLabel:
            text: "Username:"

        TextInput:
            id: username_text_input
            text: "meme"

        DynamicLabel:
            text: "Password:"

        TextInput:
            id: password_text_input
            text: "meme_is_good"

        DynamicButton:
            id: signup_button
            text: "Signup"
            on_press: root.on_signup_button_press()

        DynamicButton:
            text: "Back"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "login"

<ConnectScreen>:
    name: "connect"
    user_selector:user_selector
    partner_label: partner_label
    controller_checkbox: controller_checkbox

    GridLayout:
        size: root.size
        pos: root.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        UserSelector:
            id: user_selector
            text: "usernames"

        DynamicLabel:
            id: partner_label
            text: app.partner

        DynamicButton:
            text: "Connect"
            on_press:
                root.connect()

        DynamicButton:
            text: "Back"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"

        DynamicLabel:
            text: "Controller:"

        CheckBox:
            id: controller_checkbox


<MainMenuScreen>:
    name: "main"
    GridLayout:
        size: root.size
        rows: 2
        cols: 1
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        DynamicLabel:
            text: "RCScreen"

        DynamicButton:
            text: "Connect"
            on_press:
                root.manager.transition.direction = "left"
                app.root.current = "connect"


<ErrorPopup>:
    content_label: content_label
    title: "Error"
    RelativeLayout:
        size: root.size
        pos: root.pos
        DynamicLabel:
            id: content_label
            pos: 0, root.height - self.height
            size_hint: 1, 0.8
            text: "Unknown error occurred"

        DynamicButton:
            pos: (root.width - self.width) * 0.5, 0
            size_hint: 0.5, 0.2
            text: "OK"
            on_press: root.dismiss()


<ControllerScreen>
    mouse: mouse
    screen: screen
    keyboard_tracker: keyboard_tracker
    #controller: controller
    name: "controller"

    KeyboardTracker:
        id: keyboard_tracker

    StreamedImage:
        id: screen
        on_width: app.screen_width = self.width
        on_height: app.screen_height = self.height
        source: ""
        pos: (0, 0)
        size: root.size
        nocache: True
        allow_stretch: True
        keep_ratio: True

    Mouse:
        id: mouse
        pos: 0, 0
        size_hint: 0.01, 0.01

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size_hint: 0.1, 0.1
        pos: 0, root.height - self.height
        text: "Back"
        on_press:
            root.manager.transition.direction = "right"
            app.root.current = "connect"


<ControlledScreen>
    name: "controlled"

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size: root.width / 10, root.height / 10
        size_hint: None, None
        pos: 0, root.height - self.height
        text: "Back"
        on_press:
            root.manager.transition.direction = "right"
            app.root.current = "connect"

<Mouse>:
    GridLayout:
        rows: 1
        cols: 2
        pos_hint: 0.6, 0.8
        size_hint: 0.2, 0.2
        Spinner:
            size_hint: None, None
            text: 'left'
            values: 'left', 'right'
            on_text:
                root.button_type = self.text
        Spinner:
            size_hint: None, None
            text: 'move'
            values: 'move', 'click'
            on_text:
                root.click_type = self.text
