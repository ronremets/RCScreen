<Controller>:
    DynamicButton:
        text: "Left click"
        size_hint: 0.25, 1 / 3
        pos:
            (self.width,
            0.5 * root.height - self.height / 2)
        on_press: root.left_button_clicked()

    DynamicButton:
        text: "Right click"
        size_hint: 0.25, 1 / 3
        pos:
            (2 * self.width,
            0.5 * root.height - self.height / 2)
        on_press: root.right_button_clicked()

    DynamicButton:
        text: "<"
        size_hint: 0.25, 1 / 3
        pos: (0, 0.5 * root.height - self.height / 2)
        on_press: root.move_left()

    DynamicButton:
        text: ">"
        size_hint: 0.25, 1 / 3
        pos:
            (root.width - self.width,
            0.5 * root.height - self.height / 2)
        on_press: root.move_right()

    DynamicButton:
        text: "^"
        size_hint: 0.25, 1 / 3
        pos:
            (0.5 * root.width - self.width / 2,
            root.height - self.height)
        on_press: root.move_up()

    DynamicButton:
        text: "v"
        size_hint: 0.25, 1 / 3
        pos: (0.5 * root.width - self.width / 2, 0)
        on_press: root.move_down()


<StreamedController>:
    x_sensitivity: app.x_sensitivity
    y_sensitivity: app.y_sensitivity


<ControllerScreen>
    screen: screen
    keyboard_tracker: keyboard_tracker
    controller: controller
    name: "controller"

    KeyboardTracker:
        id: keyboard_tracker

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size_hint: 0.1, 0.1
        pos: 0, 0
        text: "Keyboard"
        on_press:
            root.keyboard_tracker.show_keyboard()

    StreamedImage:
        id: screen
        source: ""
        pos: (0, 0)
        size: root.size
        nocache: True
        allow_stretch: True

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size_hint: 0.1, 0.1
        pos: 0, root.height - self.height
        text: "Back"
        on_press:
            root.manager.transition.direction = "right"
            app.root.current = "connect"

    StreamedController:
        id: controller
        size_hint: 0.5, 0.5
        pos: root.width - self.width, 0


<ControlledScreen>
    name: "controlled"

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size: root.width / 10, root.height / 10
        size_hint: None, None
        pos: 0, root.height - self.height
        text: "Back"
        on_press:
            root.manager.transition.direction = "right"
            app.root.current = "connect"
