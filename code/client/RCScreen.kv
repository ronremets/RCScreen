<ErrorPopup>:
    GridLayout:
        size: root.size
        pos: root.pos
        rows: 3
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2
    
        DynamicLabel:
            text: "error popup"

        DynamicButton:
            text: "Back"
            on_press:
                self.text = "pressed"


<ControllerScreen>
    screen: screen
    name: "controller"

    Image:
        id: screen
        source: ""

    DynamicButton:
        background_color: 1, 1, 1, 0.5
        size: root.height / 10, root.height / 10
        size_hint: None, None
        pos: 0, root.height - self.height
        text: "Back"
        on_press:
            root.manager.transition.direction = "right"
            app.root.current = "connect"
