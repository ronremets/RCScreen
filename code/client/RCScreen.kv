<ConnectScreen>:
    name: "connect"
    refresh_button: refresh_button
    users_grid: users_grid
    controller_checkbox: controller_checkbox
    partner_text_input: partner_text_input
    partner_label: partner_label
    GridLayout:
        size: root.size
        pos: root.pos
        rows: 4
        cols: 2
        padding:
            ((self.width / self.cols) * 0.25,
            (self.height / self.rows) * 0.2)
        spacing: (self.height / self.rows) * 0.2

        DynamicLabel:
            id: partner_label
            text: "Partner:"

        TextInput:
            id: partner_text_input
            text: ""

        GridLayout:
            id: users_grid
            size: root.size
            pos: root.pos
            rows: 1
            cols: 1
            padding:
                ((self.width / self.cols) * 0.25,
                (self.height / self.rows) * 0.2)
            spacing: (self.height / self.rows) * 0.2
            DynamicLabel:
                text: "usernames"

        #DynamicButton:
        #    id: dat_boy
        #    text: "username"
        #    on_press:
        #        root.create_dropdown()
        #        root.usernames_dropdown.open(self)
            #DropDown:
            #    id: usernames_dropdown

        DynamicButton:
            id: refresh_button
            text: "Refresh"
            on_press:
                root.create_grid()


        DynamicButton:
            text: "Connect"
            on_press:
                app.is_controller = root.controller_checkbox.active
                root.connect_to_partner()
                root.manager.transition.direction = "left"
                app.root.current = ("controller" if app.is_controller else "controlled")

        DynamicButton:
            text: "Back"
            on_press:
                root.manager.transition.direction = "right"
                app.root.current = "main"

        DynamicLabel:
            text: "Controller:"

        CheckBox:
            id: controller_checkbox


