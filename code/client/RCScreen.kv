<DynamicButton@Button>:
    texture_size: self.width / 2, self.height / 2


<DynamicLabel@Label>:
    texture_size: self.width / 2, self.height / 2


WindowManager:
    LoginScreen:
    SignupScreen:
    MainMenuScreen:
    SettingsScreen:
    HelpScreen:
    FeedbackScreen:
    ConnectScreen:
